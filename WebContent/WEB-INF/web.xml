<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="WebApp_ID">
	<display-name>StuManager</display-name>
	<filter>
		<filter-name>filters</filter-name>
		<filter-class>com.stu.servlet.MyFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
		<init-param>
			<param-name>contentType</param-name>
			<param-value>text/html; charset=UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>filters</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>my</servlet-name>
		<servlet-class>com.stu.servlet.DoRegister</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>mylogin</servlet-name>
		<servlet-class>com.stu.servlet.DoLogin</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CkName</servlet-name>
		<servlet-class>com.stu.servlet.CheckUserName</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>mysrand</servlet-name>
		<servlet-class>com.stu.servlet.DoIdentifyCode</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditUser</servlet-name>
		<servlet-class>com.stu.servlet.EditUser</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditImg</servlet-name>
		<servlet-class>com.stu.servlet.EditUserImg</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MyEditPwd</servlet-name>
		<servlet-class>com.stu.servlet.EditPwd</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>my</servlet-name>
		<url-pattern>/Res.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>mylogin</servlet-name>
		<url-pattern>/login.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CkName</servlet-name>
		<url-pattern>/CkName.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>mysrand</servlet-name>
		<url-pattern>/srand.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditUser</servlet-name>
		<url-pattern>/EditU.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditImg</servlet-name>
		<url-pattern>/EditImg.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MyEditPwd</servlet-name>
		<url-pattern>/EditPwd.do</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
